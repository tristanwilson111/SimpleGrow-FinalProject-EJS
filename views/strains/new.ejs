<% include ../partials/header %>

<section>
  <form action="/strains" method="post" novalidate enctype="multipart/form-data">
    <fieldset>
      <legend>Strain Information</legend>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="strain_name" name="name" placeholder="Name of Strain" required>
      </div>

      <div class="radio-inline">
        <label><input type="radio" name="optradio">Sativa</label>
        <label><input type="radio" name="optradio">Indica</label>
        <label><input type="radio" name="optradio">Hybrid</label>
      </div> 

      <div class="form-group">
        <label for="cannabisType">Type of Cannabis</label>
        <input type="text" class="form-control" id="strain_cannabisType" name="cannabisType" placeholder="Sativa/Indica/Hybrid" required>
      </div>

      <div class="form-group">
        <input type="file" name="image" id="image">
      </div>

      <div class="form-group">
        <label for="price">Price/Gram</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">$</div>
          </div>

          <input type="number" class="form-control" id="strain_price" name="price" placeholder="4.99" step="0.01" min="0" required>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Create Strain</button>
    </div>
  </form>
</section>

<% include ../partials/footer %>